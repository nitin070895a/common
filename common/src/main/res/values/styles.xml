<resources>

    <style name="TheTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="TheTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_light</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black_99</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white_99</item>

    </style>
    <style name="AppTheme.Dark" parent="TheTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_light</item>
        <item name="android:colorBackground">@color/black_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_99</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black_99</item>
        <item name="colorControlHighlight">@color/white_33</item>
        <item name="android:scrollbarSize">@dimen/_4dp</item>
        <item name="android:scrollbarThumbHorizontal">@color/black_99</item>
        <item name="android:scrollbarThumbVertical">@color/black_99</item>

    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay"  parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="AppTheme.AlertDialog.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/black_light</item>
        <item name="android:textColor">@color/white</item>t
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
